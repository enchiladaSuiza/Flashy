<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Flashy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnBackground">@color/purple_200</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/green_200</item>
        <item name="colorSecondaryVariant">@color/green_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">@color/purple_700</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:colorControlNormal">@color/white</item>
    </style>

    <style name="Theme.Flashy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Flashy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Flashy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.FlashyYellow" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange_dark</item>
        <item name="colorOnBackground">@color/orange_light</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:statusBarColor">@color/orange_dark</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="android:colorControlNormal">@color/black</item>
        <item name="android:subtitleTextColor">@color/black</item>
    </style>

    <style name="Theme.FlashyYellow.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FlashyYellow.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="Theme.FlashyYellow.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />
</resources>